{
  "version": "2.0.0",
  "problemMatcher": "$tsc-watch",
  "tasks": [
    {
      "label": "Bootstrap",
      "command": "npm",
      "type": "shell",
      "presentation": {
        "focus": false,
        "panel": "shared"
      },
      "args": ["run", "bootstrap"],
      "isBackground": false
    },
    {
      "label": "Clean",
      "command": "npm",
      "type": "shell",
      "presentation": {
        "focus": false,
        "panel": "shared"
      },
      "args": ["run", "clean"],
      "isBackground": false
    },
    {
      "label": "Commit",
      "command": "npm",
      "type": "shell",
      "presentation": {
        "focus": true,
        "panel": "shared"
      },
      "args": ["run", "commit"],
      "isBackground": false
    },
    {
      "label": "Commitizen Initialization",
      "command": "npm",
      "type": "shell",
      "presentation": {
        "focus": false,
        "panel": "shared"
      },
      "args": ["run", "commit-init"],
      "isBackground": false
    },
    {
      "label": "Compile",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "command": "npm",
      "type": "shell",
      "presentation": {
        "focus": false,
        "panel": "dedicated"
      },
      "args": ["run", "compile"],
      "isBackground": false,
      "problemMatcher": {
        "owner": "typescript",
        "fileLocation": "relative",
        "pattern": {
          "regexp": "^(@salesforce\\/)(.*)\\((\\d+)\\,(\\d+)\\):\\s+(error|warning|info)\\s+(TS\\d+)\\s*:\\s*(.*)$",
          "file": 2,
          "line": 3,
          "severity": 5,
          "code": 6,
          "message": 7
        }
      }
    },
    {
      "label": "Create Release Branch",
      "command": "./scripts/create-release-branch-workflow.sh",
      "type": "shell",
      "args": ["${input:circleCiId}"]
    },
    {
      "label": "Create Change Log",
      "command": "./scripts/change-log-generator.js",
      "type": "shell",
      "args": [
        "${input:verboseOutput}",
        "-i",
        "${input:packagesToIgnore}",
        "-r",
        "${input:releaseOverride}"
      ]
    },
    {
      "label": "Lint",
      "command": "npm",
      "type": "shell",
      "presentation": {
        "focus": false,
        "panel": "dedicated"
      },
      "args": ["run", "lint"],
      "isBackground": false
    },
    {
      "label": "Launch Pre-Publish Steps",
      "command": "./scripts/pre-publish-workflow.sh",
      "type": "shell",
      "args": ["${input:circleCiId}", "${input:releaseBranch}"]
    },
    {
      "label": "Publish Extensions",
      "command": "./scripts/publish-workflow.sh",
      "type": "shell",
      "args": ["${input:circleCiId}"]
    },
    {
      "label": "Watch",
      "command": "npm",
      "type": "shell",
      "presentation": {
        "focus": false,
        "panel": "dedicated"
      },
      "args": ["run", "watch"],
      "isBackground": false,
      "problemMatcher": "$tsc-watch"
    }
  ],
  "inputs": [
    {
      "id": "circleCiId",
      "type": "promptString",
      "description": "CircleCi Token"
    },
    {
      "id": "packagesToIgnore",
      "type": "promptString",
      "description": "Packages To Ignore: These are packages that are not to be included in the change log (Ex package1,package2)",
      "default": "salesforcedx-vscode-soql"
    },
    {
      "id": "verboseOutput",
      "type": "pickString",
      "description": "Output verbose logging? Select -v for verbose, and blank for quiet.",
      "options": ["", "-v"],
      "default": "-v"
    },
    {
      "id": "releaseOverride",
      "type": "promptString",
      "description": "Release Version: Leave blank to grab the latest release, or provide the release manually (Ex 49.11.0)"
    },
    {
      "id": "releaseBranch",
      "type": "promptString",
      "description": "Provide the release version (Ex 49.11.0)"
    }
  ]
}
