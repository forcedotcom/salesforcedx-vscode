{
  "version": "2.0.0",
  "problemMatcher": "$tsc-watch",
  "tasks": [
    {
      "label": "Bootstrap",
      "command": "npm",
      "type": "shell",
      "presentation": {
        "focus": false,
        "panel": "shared"
      },
      "args": [
        "run",
        "bootstrap"
      ],
      "isBackground": false
    },
    {
      "label": "Clean",
      "command": "npm",
      "type": "shell",
      "presentation": {
        "focus": false,
        "panel": "shared"
      },
      "args": [
        "run",
        "clean"
      ],
      "isBackground": false
    },
    {
      "label": "Commit",
      "command": "npm",
      "type": "shell",
      "presentation": {
        "focus": true,
        "panel": "shared",
      },
      "args": [
        "run",
        "commit"
      ],
      "isBackground": false
    },
    {
      "label": "Commitizen Initialization",
      "command": "npm",
      "type": "shell",
      "presentation": {
        "focus": false,
        "panel": "shared",
      },
      "args": [
        "run",
        "commit-init"
      ],
      "isBackground": false
    },
    {
      "label": "Compile",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "command": "npm",
      "type": "shell",
      "presentation": {
        "focus": false,
        "panel": "dedicated"
      },
      "args": [
        "run",
        "compile"
      ],
      "isBackground": false,
      "problemMatcher": {
        "owner": "typescript",
        "fileLocation": "relative",
        "pattern": {
          "regexp": "^(@salesforce\\/)(.*)\\((\\d+)\\,(\\d+)\\):\\s+(error|warning|info)\\s+(TS\\d+)\\s*:\\s*(.*)$",
          "file": 2,
          "line": 3,
          "severity": 5,
          "code": 6,
          "message": 7
        }
      }
    },
    {
      "label": "Create Release Branch",
      "command": "./scripts/create-release-branch-workflow.sh",
      "type": "shell",
      "args": [
        "${input:circleCiId}"
      ]
    },
    {
      "label": "Lint",
      "command": "npm",
      "type": "shell",
      "presentation": {
        "focus": false,
        "panel": "dedicated"
      },
      "args": [
        "run",
        "lint"
      ],
      "isBackground": false
    },
    {
      "label": "Publish Extensions",
      "command": "./scripts/publish-workflow.sh",
      "type": "shell",
      "args": [
        "${input:circleCiId}"
      ]
    },
    {
      "label": "Watch",
      "command": "npm",
      "type": "shell",
      "presentation": {
        "reveal": "silent",
        "focus": false,
        "panel": "dedicated"
      },
      "args": [
        "run",
        "watch"
      ],
      "isBackground": true,
      "problemMatcher": "$tsc-watch"
    }
  ],
  "inputs": [
    {
      "id": "circleCiId",
      "type": "promptString",
      "description": "CircleCi Token"
    }
  ]
}