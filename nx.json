{
  "targetDefaults": {
    "compile": {
      "cache": true,
      "dependsOn": [
        "^compile"
      ],
      "outputs": [
        "{projectRoot}/out"
      ],
      "inputs": [
        "default",
        "^default",
        "{projectRoot}/tsconfig.json",
        "{projectRoot}/package.json",
        "{projectRoot}/src/**/*"
      ]
    },
    "lint": {
      "cache": true,
      "dependsOn": [
        "^lint"
      ],
      "inputs": [
        "{workspaceRoot}/eslint.config.mjs"
      ]
    },
    "test:unit": {
      "cache": true,
      "dependsOn": [
        "^test:unit"
      ],
      "outputs": [
        "{projectRoot}/coverage"
      ]
    },
    "vscode:bundle": {
      "executor": "nx:run-script",
      "options": {
        "script": "vscode:bundle"
      },
      "cache": true,
      "inputs": [
        "default",
        "^default",
        "{projectRoot}/out/**/*",
        "{projectRoot}/esbuild.config.mjs",
        "{projectRoot}/esbuild.config.js",
        "{projectRoot}/out/**",
        "{projectRoot}/src/**",
        "{workspaceRoot}/scripts/bundling/**"
      ],
      "outputs": [
        "{projectRoot}/dist"
      ]
    },
    "vscode:package": {
      "cache": true,
      "inputs": [
        "{projectRoot}/esbuild.config.mjs",
        "{projectRoot}/esbuild.config.js",
        "{projectRoot}/package.json",
        "{workspaceRoot}/package.json",
        "{workspaceRoot}/scripts/vsce-bundled-extension.ts",
        "{projectRoot}/dist",
        "{projectRoot}/.vscodeignore",
        "{projectRoot}/src/**"
      ]
    }
  },
  "copy:files": {
    "cache": false,
    "executor": "nx:run-commands",
    "options": {
      "command": "lerna run copy:files"
    }
  }
}
