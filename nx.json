{
  "targetDefaults": {
    "compile": {
      "cache": true,
      "dependsOn": [
        "^compile"
      ],
      "outputs": [
        "{projectRoot}/out"
      ],
      "inputs": [
        "default",
        "^default",
        "{projectRoot}/tsconfig.json",
        "{projectRoot}/package.json",
        "{projectRoot}/src/**/*"
      ]
    },
    "lint": {
      "cache": true,
      "dependsOn": [
        "^lint"
      ],
      "inputs": [
        "{workspaceRoot}/eslint.config.mjs"
      ]
    },
    "test:unit": {
      "cache": true,
      "dependsOn": [
        "^test:unit"
      ],
      "outputs": [
        "{projectRoot}/coverage"
      ]
    },
    "bundle:extension": {
      "cache": true,
      "dependsOn": [
        "compile",
        "^bundle:extension"
      ],
      "inputs": [
        "{workspaceRoot}/scripts/bundling/**",
        "{projectRoot}/esbuild.config.mjs",
        "{projectRoot}/esbuild.config.js",
        "{projectRoot}/out/**",
        "{projectRoot}/src/**"
      ],
      "outputs": [
        "{projectRoot}/dist"
      ]
    },
    "vscode:package": {
      "cache": true,
      "dependsOn": [
        "^vscode:package",
        "vscode:bundle"
      ],
      "inputs": [
        "{projectRoot}/esbuild.config.mjs",
        "{projectRoot}/esbuild.config.js",
        "{projectRoot}/package.json",
        "{workspaceRoot}/package.json",
        "{workspaceRoot}/scripts/vsce-bundled-extension.ts",
        "{projectRoot}/dist",
        "{projectRoot}/.vscodeignore",
        "{projectRoot}/src/**"
      ]
    }
  }
}
