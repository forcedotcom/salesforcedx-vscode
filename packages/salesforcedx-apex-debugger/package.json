  ],
  "dependencies": {
    "@salesforce/core": "^8.19.1",
    "@salesforce/salesforcedx-utils": "64.13.1",
    "@vscode/debugadapter": "1.68.0",
    "@vscode/debugprotocol": "1.68.0",
    "async-lock": "1.4.1",
    "faye": "1.1.2",
    "request-light": "^0.8.0"
  },
  "devDependencies": {
    "@tsconfig/node22": "22.0.2",
    "@types/async-lock": "1.4.2",
    "@types/chai": "4.3.3",
    "@types/jest": "29.5.14",
    "@types/mocha": "^10",
    "@types/sinon": "^2.3.7",
    "@types/vscode": "1.90.0",
    "@vscode/debugadapter-testsupport": "1.68.0",
    "chai": "^4.0.2",
    "jest": "^29.7.0",
    "jest-junit": "14.0.1",
    "mocha": "^10",
    "mocha-junit-reporter": "^1.23.3",
    "mocha-multi-reporters": "^1.1.7",
    "nyc": "^15",
    "sinon": "^13.0.1",
    "ts-jest": "^29.4.1",
    "vscode-uri": "^3.1.0"
  },
  "scripts": {
    "bundle:debugger": "npx esbuild ./src/adapter/apexDebug.ts --bundle --outfile=dist/apexDebug.js --format=cjs --platform=node --minify",
