{
  "name": "@salesforce/salesforcedx-apex-debugger",
  "displayName": "Apex Debugger Adapter",
  "description": "Implements the VS Code Debug Protocol for the Apex Debugger",
  "version": "63.2.1",
  "publisher": "salesforce",
  "license": "BSD-3-Clause",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Debuggers"
  ],
  "dependencies": {
    "@salesforce/salesforcedx-utils": "63.2.1",
    "@vscode/debugadapter": "1.68.0",
    "@vscode/debugprotocol": "1.68.0",
    "async-lock": "1.0.0",
    "faye": "1.1.2",
    "request-light": "^0.7.0"
  },
  "devDependencies": {
    "@salesforce/salesforcedx-test-utils-vscode": "63.2.1",
    "@types/async-lock": "0.0.20",
    "@types/chai": "4.3.3",
    "@types/jest": "^29.5.5",
    "@types/mocha": "^5",
    "@types/node": "^20.0.0",
    "@types/rimraf": "^3.0.2",
    "@types/sinon": "^2.3.7",
    "@vscode/debugadapter-testsupport": "1.68.0",
    "chai": "^4.0.2",
    "cross-env": "5.2.0",
    "eslint-plugin-jest": "28.9.0",
    "jest": "^29.7.0",
    "jest-junit": "14.0.1",
    "mocha": "^10",
    "mocha-junit-reporter": "^1.23.3",
    "mocha-multi-reporters": "^1.1.7",
    "mock-spawn": "0.2.6",
    "nyc": "^15",
    "prettier": "3.3.3",
    "rimraf": "3.0.2",
    "sinon": "^13.0.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.6.2",
    "vscode-uri": "1.0.1"
  },
  "scripts": {
    "bundle:debugger": "esbuild ./src/adapter/apexDebug.ts  --bundle --outfile=dist/apexdebug.js --format=cjs --platform=node --minify",
    "compile": "tsc -p ./",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "watch": "tsc -watch -p .",
    "clean": "shx rm -rf node_modules && shx rm -rf out && shx rm -rf coverage && shx rm -rf .nyc_output",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "jest --coverage --forceExit",
    "test:integration": "jest --coverage --forceExit -c ./jest.integration.config.js"
  },
  "nyc": {
    "reporter": [
      "text-summary",
      "lcov"
    ]
  }
}
