{
  "name": "@salesforce/salesforcedx-utils-vscode",
  "displayName": "SFDX Utilities for VS Code",
  "description": "Provides utilies to interface the SFDX libraries with VS Code",
  "version": "47.15.0",
  "publisher": "salesforce",
  "license": "BSD-3-Clause",
  "categories": [
    "Other"
  ],
  "dependencies": {
    "cross-spawn": "6.0.5",
    "path-exists": "3.0.0",
    "rxjs": "^5.4.1",
    "shelljs": "0.8.3",
    "tree-kill": "^1.1.0"
  },
  "devDependencies": {
    "@types/chai": "^4.0.0",
    "@types/cross-spawn": "6.0.0",
    "@types/mocha": "^5",
    "@types/node": "8.9.3",
    "@types/path-exists": "^1.0.29",
    "@types/shelljs": "0.7.9",
    "@types/sinon": "^2.3.2",
    "chai": "^4.0.2",
    "mocha": "^5",
    "mock-spawn": "0.2.6",
    "nyc": "^13",
    "request-light": "0.2.4",
    "sinon": "^7.3.1",
    "typescript": "3.1.6"
  },
  "engines": {
    "vscode": "^1.40.0"
  },
  "scripts": {
    "compile": "webpack",
    "lint": "tslint --project .",
    "watch": "tsc -watch -p .",
    "clean": "shx rm -rf node_modules && shx rm -rf out && shx rm -rf coverage && shx rm -rf .nyc_output",
    "test": "npm run test:unit",
    "test:unit": "node ./node_modules/nyc/bin/nyc.js ./node_modules/mocha/bin/_mocha --recursive out/test/unit/**/*.js --timeout 20000",
    "coverage": "./node_modules/.bin/nyc npm test"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "instrument": false,
    "sourceMap": false,
    "reporter": [
      "text-summary",
      "lcov"
    ]
  }
}
