{
  "name": "@salesforce/salesforcedx-utils-vscode",
  "displayName": "SFDX Utilities for VS Code",
  "description": "Provides utilities to interface the SFDX libraries with VS Code",
  "version": "65.7.0",
  "publisher": "salesforce",
  "license": "BSD-3-Clause",
  "categories": [
    "Other"
  ],
  "main": "out/src",
  "dependencies": {
    "@salesforce/core": "^8.23.3",
    "@salesforce/o11y-reporter": "1.6.0",
    "@salesforce/salesforcedx-utils": "*",
    "@salesforce/source-tracking": "^7.7.0",
    "@salesforce/vscode-i18n": "*",
    "@salesforce/vscode-service-provider": "^1.5.0",
    "applicationinsights": "1.0.7",
    "cross-spawn": "7.0.6",
    "effect": "^3.19.13",
    "rxjs": "^5.4.1",
    "tree-kill": "^1.1.0",
    "vscode-uri": "^3.1.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@salesforce/source-deploy-retrieve": "^12.29.1",
    "@types/cross-spawn": "6.0.6",
    "@types/jest": "^29.5.5",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.1"
  },
  "engines": {
    "vscode": "^1.90.0"
  },
  "scripts": {
    "compile": "wireit",
    "lint": "wireit",
    "clean": "shx rm -rf node_modules out dist coverage .nyc_output .wireit .eslintcache",
    "test": "wireit"
  },
  "wireit": {
    "compile": {
      "command": "tsc --build --pretty",
      "clean": "if-file-deleted",
      "dependencies": [
        "../salesforcedx-utils:compile",
        "../salesforcedx-vscode-i18n:compile"
      ],
      "files": [
        "src/**/*.ts",
        "test/**/*.ts",
        "tsconfig.json",
        "../../tsconfig.common.json"
      ],
      "output": [
        "out/**",
        "tsconfig.tsbuildinfo"
      ]
    },
    "test": {
      "command": "jest --coverage",
      "dependencies": [
        "compile"
      ],
      "files": [
        "src/**/*.ts",
        "test/**/*.ts",
        "jest.config.js",
        "../../config/jest.base.config.js"
      ],
      "output": [
        "coverage"
      ]
    },
    "lint": {
      "command": "eslint --color --cache --cache-location .eslintcache .",
      "dependencies": [
        "../eslint-local-rules:compile"
      ],
      "files": [
        "src/**/*.ts",
        "test/**/*.ts",
        "../../eslint.config.mjs",
        "package.json",
        "package.nls.json"
      ],
      "output": []
    }
  }
}
