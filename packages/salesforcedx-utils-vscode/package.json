  },
  "devDependencies": {
    "@types/chai": "^4.0.0",
    "@types/cross-spawn": "6.0.0",
    "@types/glob": "^5.0.30",
    "@types/mocha": "^2.2.38",
    "@types/node": "8.9.3",
    "@types/path-exists": "^1.0.29",
    "@types/shelljs": "0.7.9",
    "@types/sinon": "^2.3.2",
    "chai": "^4.0.2",
    "decache": "^4.1.0",
    "glob": "^7.1.2",
    "istanbul": "^0.4.5",
    "mocha": "^3.2.0",
    "mocha-junit-reporter": "^1.13.0",
    "mocha-multi-reporters": "^1.1.4",
