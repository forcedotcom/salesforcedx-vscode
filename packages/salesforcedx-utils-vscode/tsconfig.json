{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "rootDir": ".",
    "outDir": "out",
    "preserveConstEnums": true,
    "strict": true,
    "typeRoots": [ "node_modules/@types" ]
  },
  "exclude": ["node_modules", "out"]
}
