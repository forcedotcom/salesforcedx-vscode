    "userCreation": {
        "prefix": "createUsers",
        "body": [
            "public static list<user> createUsers(integer numberOfUsers){",
            "\tlist<user> users = new list<user>();",
            "\tProfile p = [SELECT Id FROM Profile WHERE Name='${1:Standard User}'];",
            "\tfor (integer i=0; i<numberOfUsers; i++){",
            "\t\tstring x = string.valueOf(i);",
            "\t\tUser u = new User(Alias = 't'+x, Email='standarduser'+x+'@${2:someDomain.test}',",
            "\t\t\tEmailEncodingKey='UTF-8', LastName='Testing' + x, LanguageLocaleKey='en_US',LocaleSidKey='en_US', ProfileId = p.Id,",
            "\t\t\tTimeZoneSidKey='America/Los_Angeles', UserName='standarduser'+x+'@${2:someDomain.test}');",
            "\tusers.add(u);",
            "\t}",
            "",
            "\tinsert users;",
            "\treturn users;",
            "}"
        ],
        "description": "creates some amount of test users for a test method or for @TestSetup"
    },
