{
  "preview": true,
  "name": "salesforcedx-vscode-apex",
  "displayName": "Apex Code Editor for Visual Studio Code",
  "description": "Provides code-completion for the Apex programming language",
  "version": "0.1.0",
  "publisher": "salesforce",
  "license": "MIT",
  "engines": {
    "vscode": "^1.10.0"
  },
  "categories": [
    "Languages"
  ],
  "devDependencies": {
    "@types/chai": "^4.0.0",
    "@types/mocha": "2.2.38",
    "@types/node": "^6.0.40",
    "@types/path-exists": "^1.0.29",
    "chai": "^4.0.2",
    "mocha": "3.2.0",
    "typescript": "2.3.4",
    "vscode": "1.1.0"
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p .",
    "clean": "rm -rf node_modules && rm -rf out",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "activationEvents": [
    "workspaceContains:sfdx-project.json"
  ],
  "main": "./out/src",
  "contributes": {
    "languages": [
      {
        "id": "apex",
        "aliases": [
          "Apex",
          "apex"
        ],
        "extensions": [
          ".cls",
          ".trigger"
        ],
        "configuration": "./syntaxes/apex.configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "apex",
        "scopeName": "source.apex",
        "path": "./syntaxes/apex.tmLanguage"
      }
    ]
  },
  "dependencies": {
    "expand-home-dir": "0.0.3",
    "path-exists": "3.0.0",
    "portfinder": "1.0.12",
    "vscode-languageclient": "3.3.0"
  }
}