{
  // ts-loader doesn't process references https://github.com/TypeStrong/ts-loader/issues/1035
  // "extends": "../../tsconfig.common.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": ["dom", "es2016"],
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "rootDir": ".",
    "outDir": "out",
    "preserveConstEnums": true,
    "strict": true
  },
  "exclude": ["node_modules", "out"]
}
