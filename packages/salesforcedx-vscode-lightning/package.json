{
  "preview": true,
  "name": "salesforcedx-vscode-lightning",
  "displayName": "Lightning Code Editor for Visual Studio Code",
  "description": "Provides syntax highlighting for Lightning framework",
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#ECECEC",
    "theme": "light"
  },
  "version": "0.1.0",
  "publisher": "salesforce",
  "license": "MIT",
  "engines": {
    "vscode": "^1.10.0"
  },
  "categories": ["Languages"],
  "devDependencies": {
    "@types/chai": "^4.0.0",
    "@types/mocha": "2.2.38",
    "@types/node": "^6.0.40",
    "@types/sinon": "^2.3.2",
    "chai": "^4.0.2",
    "mocha": "3.2.0",
    "sinon": "^2.3.6",
    "typescript": "2.4.0",
    "vscode": "1.1.2"
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -p ./",
    "lint": "tslint --project .",
    "watch": "tsc -watch -p .",
    "clean": "rm -rf node_modules && rm -rf out",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "contributes": {
    "languages": [
      {
        "id": "html",
        "extensions": [
          ".app",
          ".cmp",
          ".design",
          ".evt",
          ".intf",
          ".auradoc",
          ".tokens"
        ]
      }
    ]
  }
}
