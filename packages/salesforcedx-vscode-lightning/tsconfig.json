{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": [
      "dom",
      "es2016"
    ],
    "sourceMap": true,
    "declarationMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "rootDir": ".",
    "outDir": "out",
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "strict": true
  },
  "exclude": [
    "node_modules",
    ".vscode-test",
    "out"
  ],
  "references": [
    {
      "path": "../salesforcedx-utils-vscode"
    },
    {
      "path": "../salesforcedx-test-utils-vscode"
    }
  ]
}
