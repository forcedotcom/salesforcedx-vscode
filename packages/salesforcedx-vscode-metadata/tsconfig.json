{
  "extends": "../../tsconfig.common.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "out",
    "resolveJsonModule": true,
    "plugins": [
      {
        "name": "@effect/language-service"
      }
    ]
  },
  "exclude": ["node_modules", ".vscode-test", "out", "dist"],
