{
  "name": "@salesforce/salesforcedx-visualforce-markup-language-server",
  "description": "Language service for Visualforce Markup",
  "version": "65.7.0",
  "publisher": "salesforce",
  "license": "BSD-3-Clause",
  "engines": {
    "vscode": "^1.90.0"
  },
  "activationEvents": [
    "onView:never"
  ],
  "main": "out/src",
  "dependencies": {
    "vscode-languageserver-types": "^3.4.0",
    "vscode-uri": "^3.1.0"
  },
  "scripts": {
    "clean": "shx rm -rf node_modules out dist coverage .nyc_output .wireit .eslintcache .circular-deps.json",
    "compile": "wireit",
    "lint": "wireit",
    "test": "wireit"
  },
  "wireit": {
    "compile": {
      "command": "tsc --build --pretty && shx cp src/beautify/beautify-* out/src/beautify/",
      "clean": "if-file-deleted",
      "files": [
        "src/**/*.ts",
        "src/beautify/beautify-*",
        "test/**/*.ts",
        "tsconfig.json",
        "../../tsconfig.common.json"
      ],
      "output": [
        "out/**",
        "tsconfig.tsbuildinfo"
      ]
    },
    "test": {
      "command": "jest --coverage",
      "dependencies": [
        "compile"
      ],
      "files": [
        "src/**/*.ts",
        "test/**/*.ts",
        "jest.config.js",
        "../../config/jest.base.config.js"
      ],
      "output": [
        "coverage"
      ]
    },
    "check:circular-deps": {
      "command": "dpdm --no-warning --no-tree --exit-code circular:1 -o .circular-deps.json src",
      "dependencies": ["compile"],
      "files": [
        "src/**/*.ts",
        "tsconfig.json",
        "../../tsconfig.common.json"
      ],
      "output": [".circular-deps.json"]
    },
    "lint": {
      "command": "eslint --color --cache --cache-location .eslintcache .",
      "dependencies": [
        "../eslint-local-rules:compile",
        "check:circular-deps"
      ],
      "files": [
        "src/**/*.ts",
        "test/**/*.ts",
        "../../eslint.config.mjs",
        "package.json",
        "package.nls.json"
      ],
      "output": []
    }
  }
}
