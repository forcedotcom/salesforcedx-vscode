{
  "name": "@salesforce/playwright-vscode-ext",
  "version": "65.7.0",
  "private": true,
  "main": "./out/src/index.js",
  "dependencies": {
    "@playwright/test": "^1.57.0",
    "@vscode/test-electron": "2.5.2",
    "@vscode/test-web": "^0.0.77"
  },
  "devDependencies": {
    "@salesforce/core": "^8.23.3"
  },
  "scripts": {
    "compile": "wireit",
    "clean": "shx rm -rf node_modules .wireit out .eslintcache tsconfig.tsbuildinfo",
    "lint": "wireit",
    "test:web": "wireit",
    "test:web:ui": "DEBUG_MODE=1 npm run test:web -- --headed",
    "test:web:debug": "npm run test:web -- --debug",
    "test:desktop": "wireit",
    "test:desktop:debug": "npm run test:desktop -- --debug"
  },
  "wireit": {
    "compile": {
      "command": "tsc --build --pretty",
      "clean": "if-file-deleted",
      "files": [
        "src/**/*.ts",
        "tsconfig.json",
        "../../tsconfig.common.json",
        "package.json"
      ],
      "output": [
        "out/**",
        "tsconfig.tsbuildinfo"
      ]
    },
    "lint": {
      "command": "eslint --color --cache --cache-location .eslintcache .",
      "dependencies": [
        "../eslint-local-rules:compile"
      ],
      "files": [
        "src/**/*.ts",
        "../../eslint.config.mjs"
      ],
      "output": []
    },
    "test:web": {
      "command": "playwright test --config=playwright.config.web.ts",
      "dependencies": [
        "compile",
        "../salesforcedx-vscode-services:vscode:bundle"
      ],
      "files": [
        "test/playwright/**/*.ts",
        "playwright.config.web.ts"
      ],
      "output": []
    },
    "test:desktop": {
      "command": "VSCODE_DESKTOP=1 playwright test --config=playwright.config.desktop.ts",
      "dependencies": [
        "compile",
        "../salesforcedx-vscode-services:vscode:bundle"
      ],
      "files": [
        "test/playwright/**/*.ts",
        "playwright.config.desktop.ts"
      ],
      "output": []
    }
  }
}
