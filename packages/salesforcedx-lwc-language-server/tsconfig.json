{
    "compilerOptions": {
        "target": "es2022",
        "module": "commonjs",
        "moduleResolution": "node16",
        "sourceMap": true,
        "declarationMap": true,
        "lib": [
            "es2022"
        ],
        "outDir": "./out",
        "composite": true,

        "strictNullChecks": true,
        "noImplicitAny": true,
        "noUnusedParameters": false,
        "noUnusedLocals": false,

        "pretty": true,
        "declaration": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "types": ["node", "jest"]
    },

    "include": [
        "src/**/*.ts",
        "src/**/*.json",
        "src/resources/**/*.json",
        "typings/*.d.ts",
        "jest/*.ts"
    ],

    "exclude": [
        "node_modules",
        "**/__tests__/fixtures/*.js"
    ],

    "references": [
        {
            "path": "../salesforcedx-lightning-lsp-common"
        }
    ]
}
