{
  "extends": "../../tsconfig.common.json",
  "compilerOptions": {
    "outDir": "./out",
    "target": "ES2022",
    "lib": ["es2022", "dom"],
    "strictNullChecks": true,
    "noUnusedParameters": false,
    "pretty": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/**/*.json", "typings/*.d.ts", "jest/*.js", "jest/*.ts"],
  "exclude": ["out", "node_modules", "**/__tests__/fixtures/*.js"]
}
