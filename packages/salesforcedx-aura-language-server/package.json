{
  "name": "@salesforce/salesforcedx-aura-language-server",
  "displayName": "Aura Language Server",
  "version": "64.16.1",
  "description": "Language server for Aura components.",
  "publisher": "salesforce",
  "engines": {
    "vscode": "^1.90.0"
  },
  "main": "out/src/index.js",
  "typings": "out/src/index.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "import": "./out/src/index.js",
      "require": "./out/src/index.js",
      "types": "./out/src/index.d.ts"
    },
    "./utils/componentUtil": {
      "import": "./out/src/util/componentUtil.js",
      "require": "./out/src/util/componentUtil.js",
      "types": "./out/src/util/componentUtil.d.ts"
    }
  },
  "license": "BSD-3-Clause",
  "repository": {
    "url": "https://github.com/forcedotcom/salesforcedx-vscode"
  },
  "scripts": {
    "clean": "shx rm -rf node_modules out coverage .wireit .eslintcache",
    "compile": "wireit",
    "test": "jest --coverage",
    "lint": "wireit"
  },
  "wireit": {
    "compile": {
      "command": "tsc -p . && node scripts/build.js",
      "clean": "if-file-deleted",
      "dependencies": [
        "../salesforcedx-lightning-lsp-common:compile"
      ],
      "files": [
        "src/**/*.ts",
        "scripts/**/*.js",
        "tsconfig.json",
        "../../tsconfig.common.json"
      ],
      "output": [
        "out/**",
        "tsconfig.tsbuildinfo"
      ]
    },
    "lint": {
      "command": "eslint --color --cache --cache-location .eslintcache .",
      "dependencies": [
        "../eslint-local-rules:compile"
      ],
      "files": [
        "src/**/*.ts",
        "../../eslint.config.mjs"
      ],
      "output": []
    }
  },
  "dependencies": {
    "@salesforce/salesforcedx-lightning-lsp-common": "*",
    "@salesforce/salesforcedx-utils": "*",
    "@salesforce/vscode-i18n": "*",
    "acorn": "^6.0.0",
    "acorn-loose": "^6.0.0",
    "acorn-walk": "^6.0.0",
    "line-column": "^1.0.2",
    "vscode-html-languageservice": "^5.0.0",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.12",
    "vscode-languageserver-types": "3.17.5",
    "vscode-uri": "1.0.6"
  },
  "devDependencies": {
    "jest-extended": "^0.11.5"
  }
}
