{
  "extends": "../../tsconfig.common.json",
  "compilerOptions": {
    "outDir": "./out",
    "target": "ES2022",
    "lib": ["es2022", "dom"],
    "noImplicitAny": false,
    "strictNullChecks": true,
    "noUnusedParameters": false,
    "pretty": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/**/*.json", "src/**/*.js", "resources/**/*.js", "typings/*.d.ts", "jest/*.js"],
  "exclude": [
    "node_modules",
    "src/tern/**/*.js",
    "src/tern/test/**/*",
    "src/tern/doc/**/*",
    "src/tern/emacs/**/*",
    "src/tern/bin/**/*",
    "**/__tests__/fixtures/*.js"
  ],
  "references": [
    {
      "path": "../salesforcedx-lightning-lsp-common"
    }
  ]
}
