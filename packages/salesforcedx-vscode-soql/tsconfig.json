{
  "extends": "../../tsconfig.common.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": [
      "dom",
      "es2016"
    ],
    "sourceMap": true,
    "declarationMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "rootDir": ".",
    "outDir": "out",
    "preserveConstEnums": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    ".vscode-test",
    "out",
    "./test/ui-test/resources/extensions"
  ],
  "references": [
    {
      "path": "../salesforcedx-sobjects-faux-generator"
    },
    {
      "path": "../salesforcedx-test-utils-vscode"
    },
    {
      "path": "../salesforcedx-utils-vscode"
    }
  ]
}
