{
  "preview": true,
  "name": "salesforcedx-vscode-core",
  "displayName": "SFDX CLI integration for Visual Studio Code",
  "description": "Provides integration with the SFDX CLI",
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#ECECEC",
    "theme": "light"
  },
  "version": "0.1.0",
  "publisher": "salesforce",
  "license": "MIT",
  "engines": {
    "vscode": "^1.13.0"
  },
  "categories": ["Other"],
  "dependencies": {
    "@salesforce/salesforcedx-utils-vscode": "0.1.0",
    "rxjs": "^5.4.1"
  },
  "devDependencies": {
    "@types/chai": "^4.0.0",
    "@types/mocha": "2.2.38",
    "@types/node": "^6.0.40",
    "@types/path-exists": "^1.0.29",
    "@types/sinon": "^2.3.2",
    "chai": "^4.0.2",
    "mocha": "3.2.0",
    "nyc": "^11.0.2",
    "sinon": "^2.3.6",
    "typescript": "2.4.0",
    "vscode": "1.1.2"
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -p ./",
    "lint": "tslint --project .",
    "watch": "tsc -watch -p .",
    "clean": "rm -rf node_modules && rm -rf out",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "activationEvents": [
    "workspaceContains:sfdx-project.json",
    "onCommand:sfdx.force.auth.web.login",
    "onCommand:sfdx.force.org.create",
    "onCommand:sfdx.force.org.open",
    "onCommand:sfdx.force.source.pull",
    "onCommand:sfdx.force.source.push",
    "onCommand:sfdx.force.source.status",
    "onCommand:sfdx.force.source.status",
    "onCommand:sfdx.force.apex.test.run"
  ],
  "main": "./out/src",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "sfdx.force.tasks.view",
          "name": "Running Tasks"
        }
      ]
    },
    "menus": {
      "view/item/context": [
        {
          "command": "sfdx.force.task.stop",
          "when": "view == sfdx.force.tasks.view"
        }
      ]
    },
    "commands": [
      {
        "command": "sfdx.force.auth.web.login",
        "title": "force:auth:web:login"
      },
      {
        "command": "sfdx.force.org.create",
        "title": "force:org:create"
      },
      {
        "command": "sfdx.force.org.open",
        "title": "force:org:open"
      },
      {
        "command": "sfdx.force.source.pull",
        "title": "force:source:pull"
      },
      {
        "command": "sfdx.force.source.push",
        "title": "force:source:push"
      },
      {
        "command": "sfdx.force.source.status",
        "title": "force:source:status"
      },
      {
        "command": "sfdx.force.apex.test.run",
        "title": "force:apex:test:run"
      },
      {
        "command": "sfdx.force.task.stop",
        "title": "Terminate SFDX command"
      }
    ]
  }
}
