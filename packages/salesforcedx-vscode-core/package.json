{
  "preview": true,
  "name": "salesforcedx-vscode-core",
  "displayName": "SFDX CLI integration for Visual Studio Code",
  "description": "Provides integration with the SFDX CLI",
  "qna": "https://github.com/forcedotcom/salesforcedx-vscode/issues",
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#ECECEC",
    "theme": "light"
  },
  "version": "40.0.0",
  "publisher": "salesforce",
  "license": "BSD-3-Clause",
  "engines": {
    "vscode": "^1.13.0"
  },
  "categories": [
    "Other"
  ],
  "dependencies": {
    "@salesforce/salesforcedx-utils-vscode": "40.0.0",
    "rxjs": "^5.4.1"
  },
  "devDependencies": {
    "@types/chai": "^4.0.0",
    "@types/mocha": "2.2.38",
    "@types/node": "^6.0.40",
    "@types/path-exists": "^1.0.29",
    "@types/sinon": "^2.3.2",
    "chai": "^4.0.2",
    "mocha": "3.2.0",
    "nyc": "^11.0.2",
    "sinon": "^2.3.6",
    "typescript": "2.4.0",
    "vscode": "1.1.2"
  },
  "scripts": {
    "vscode:prepublish": "npm prune --production",
    "vscode:package": "vsce package",
    "vscode:sha256": "node ../../scripts/generate-sha256.js >> ../../SHA256",
    "vscode:publish": "node ../../scripts/publish-vsix.js",
    "compile": "tsc -p ./",
    "lint": "tslint --project .",
    "watch": "tsc -watch -p .",
    "clean": "shx rm -rf node_modules && shx rm -rf out",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "activationEvents": [
    "workspaceContains:sfdx-project.json",
    "onCommand:sfdx.force.auth.web.login",
    "onCommand:sfdx.force.org.create",
    "onCommand:sfdx.force.org.open",
    "onCommand:sfdx.force.source.pull",
    "onCommand:sfdx.force.source.push",
    "onCommand:sfdx.force.source.status",
    "onCommand:sfdx.force.source.status",
    "onCommand:sfdx.force.apex.test.run"
  ],
  "main": "./out/src",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "sfdx.force.tasks.view",
          "name": "%running_tasks_title_text%"
        }
      ]
    },
    "menus": {
      "view/item/context": [
        {
          "command": "sfdx.force.task.stop",
          "when": "view == sfdx.force.tasks.view"
        }
      ]
    },
    "commands": [
      {
        "command": "sfdx.force.auth.web.login",
        "title": "%force_auth_web_login_authorize_dev_hub_text%"
      },
      {
        "command": "sfdx.force.org.create",
        "title": "%force_org_create_default_scratch_org_text%"
      },
      {
        "command": "sfdx.force.org.open",
        "title": "%force_org_open_default_scratch_org_text%"
      },
      {
        "command": "sfdx.force.source.pull",
        "title": "%force_source_pull_default_scratch_org_text%"
      },
      {
        "command": "sfdx.force.source.push",
        "title": "%force_source_push_default_scratch_org_text%"
      },
      {
        "command": "sfdx.force.source.status",
        "title": "%force_source_status_text%"
      },
      {
        "command": "sfdx.force.apex.test.run",
        "title": "%force_apex_test_run_text%"
      },
      {
        "command": "sfdx.force.task.stop",
        "title": "%cancel_sfdx_command_text%"
      }
    ]
  }
}