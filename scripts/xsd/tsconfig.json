{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "./out",
    "noEmit": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["es2021", "dom"],
    "downlevelIteration": true,
    "sourceMap": true,
    "declaration": false,
    "skipLibCheck": true
  },
  "include": [
    "*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
